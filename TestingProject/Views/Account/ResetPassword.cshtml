@model EnrollmentSystem.Models.ResetPasswordModel
<link href="~/Content/style.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap" rel="stylesheet">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=PT+Serif&family=Poppins:wght@300&display=swap" rel="stylesheet">
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.SaveResult == true)
{
    <div class="alert alert-success">
        <strong>Success! </strong>The password reset link has been sent to your email.
    </div>
}
<div class="logo">
    <img src="~/Content/img/Cavite_State_University.png">
</div>
<h6>Cavite State University - Bacoor Campus <br /> Enrollment System</h6>

<h1>Reset Password</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h6>An Email link will be send to your mail. Click the link to reset your password</h6>
    <hr />
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Reset Password" class="btn btn-default btn-success" />
        </div>
    </div>
    <div class="sign-up mt-3">
        <a style="text-align:center;"class="nav-link" href=" /Account/Login">Back to Log-in </a>
    </div>
</div>
}


