<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incoming - CvSU Bacoor Campus Enrollment System</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Serif&family=Poppins:wght@300&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/styleRegForm.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body">
    <div class="hello container-xl col-9 pt-4 pb-1">
        <h2 align="center">Registration Form for Incoming 1st year students.</h2>
    </div>
    
    <div class="container-xl col-10 justify-content-center mt-1 p-5">
        <div class="form-group mt-1 ps-3 py-4">
            <label for="exampleInputEmail1"><strong>Email address</strong></label>
            <div class="col-9">
                <input type="email" class="form-control form-control-lg text mt-3" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

        </div>

        <div class="form-group mt-4 ps-3 py-4">
            <label for="lastName"><strong>Last Name</strong></label>
            <div class="col-9 pb-2">
                <input type="text" class=" form-control form-control-lg mt-3" id="lastName" placeholder="Enter last name">
            </div>
        </div>

        <div class="form-group mt-4 ps-3 py-4">
            <label for="lastName"><strong>First Name</strong></label>
            <div class="col-9 pb-2">
                <input type="text" class=" form-control form-control-lg mt-3" id="lastName" placeholder="Enter first name">
            </div>
        </div>

        <div class="form-group mt-4 ps-3 py-4">
            <label for="lastName"><strong>Middle Name</strong></label>
            <div class="col-9 pb-2">
                <input type="text" class=" form-control form-control-lg mt-3" id="lastName" placeholder="Enter middle name">
            </div>
        </div>

        <div class="form-group mt-4 ps-3 py-4">
            <label for="lastName"><strong>Age</strong></label>
            <div class="col-9 pb-2">
                <input type="text" class=" form-control form-control-lg mt-3" id="lastName" placeholder="Enter age">
            </div>
        </div>

        <div class="form-group mt-4 ps-3 py-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="getInfoCheck">
                <label class="form-check-label" for="getInfoCheck">
                    By checking this you are allowing the collection of your data...
                </label>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                
            </div>
        </div>



    </div>
    
    
        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
