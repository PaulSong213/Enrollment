@{
     Layout = null;
     var enrollment = ViewBag.Enrollment;
     var registrar = enrollment.registrarsModel;
     var student = enrollment.studentsModel;
     var course = enrollment.coursesModel;
     
     var registrarFullName = registrar.FirstName + ' ' + registrar.MiddleName[0] + ". " + registrar.LastName;
     var studentFullName = student.FirstName + ' ' + student.MiddleName[0] + ". " + student.LastName;
     
     var courseYearSection = course.Acronym + ' ' + enrollment.Year + '-' + enrollment.Section;
     var studentNumber = enrollment.StudentId;
     
     ViewBag.Title = studentFullName;
     
     string url = HttpContext.Current.Request.Url.AbsoluteUri;
     Uri myUri = new Uri(url);
     string willDownload = HttpUtility.ParseQueryString(myUri.Query).Get("download");
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Enrollment Confirmation</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/logo.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* CLIENT-SPECIFIC STYLES */
         body,
         table,
         td,
         a {
             -webkit-text-size-adjust: 100%;
             -ms-text-size-adjust: 100%;
         }

         table,
         td {
             mso-table-lspace: 0pt;
             mso-table-rspace: 0pt;
         }

         img {
             -ms-interpolation-mode: bicubic;
         }

         /* RESET STYLES */
         img {
             border: 0;
             height: auto;
             line-height: 100%;
             outline: none;
             text-decoration: none;
         }

         table {
             border-collapse: collapse !important;
         }

         body {
             height: 100% !important;
             margin: 0 !important;
             padding-bottom: 5rem;
             width: 100% !important;
             background-color: #5c5e5d;
            
         }
            
        .content {
            height: 230mm;
            width: 188mm;
        }
            
        .bg-pdf {
            background-color: #909693;    
        }
            
        * {
            text-underline-offset: 3px;    
        }
     
    </style>
</head>
<body class="bg-pdf">

<section class="d-flex justify-content-center my-5">
    <button id="downloadConfirmation" class="btn btn-primary fs-5 mx-5">Download Enrollment Confirmation as PDF</button>
    <button id="downloadRegistration" class="btn btn-primary fs-5 mx-5">Download Registration Form as PDF</button>
</section>
<section>
    <div id="enrollmentConfirmation" class="bg-white shadow mx-auto p-5 content" >
       <div>
       <h1 style="font-size: 34px; font-weight: 400; margin: 2;text-align:center">Confirmation of Enrollment</h1> 
       <img src="/images/logo.png" class="mx-auto" width="125" height="120" style="display: block; border: 0px;" />             
       </div>
       <div class="my-5 fs-6">
            <p style="margin: 0;">
                    Dear Mr. <span class="fw-bold text-decoration-underline">@studentFullName ,</span>
                </p>
                <p class="mb-3" id="test">
                    Greetings from Cavite State University - Bacoor Campus
                </p>
                <p class="mb-3">
                    This is to infrom you that you are OFFICIALY  ENROLLED in the program <span class="mx-1"></span>
                    for the First Semester of Academic Year 2021-2022.
                </p>
                <p class="mb-3">
                    Please take note of these informations:
                    <br/>
                    <span>Student number:</span>
                    <span class="fw-bold text-decoration-underline">@studentNumber</span>
                    <br/>
                    <span>Course, Year, & Section</span>
                    <span class="fw-bold text-decoration-underline">@courseYearSection</span>
                </p>
                 <p class="mb-3">
                    Congatulations!
                </p>
                <br/>
                <p class="mb-3">
                    Enrollment Committee
                </p>
                <p class="mb-3 fw-bold text-decoration-underline">
                    @registrarFullName
                </p> 
        </div>
        </div>
            
      <div id="registrationForm" class="bg-white my-5 shadow mx-auto p-5 content" >
       <div>
       <h1 style="font-size: 34px; font-weight: 400; margin: 2;text-align:center">Confirmation of Enrollment</h1> 
       <img src="/images/logo.png" class="mx-auto" width="125" height="120" style="display: block; border: 0px;" />             
       </div>
       <div class="my-5 fs-6">
            <p style="margin: 0;">
                    Dear Mr. <span class="fw-bold text-decoration-underline">@studentFullName ,</span>
                </p>
                <p class="mb-3" id="test">
                    Greetings from Cavite State University - Bacoor Campus
                </p>
                <p class="mb-3">
                    This is to infrom you that you are OFFICIALY  ENROLLED in the program <span class="mx-1"></span>
                    for the First Semester of Academic Year 2021-2022.
                </p>
                <p class="mb-3">
                    Please take note of these informations:
                    <br/>
                    <span>Student number:</span>
                    <span class="fw-bold text-decoration-underline">@studentNumber</span>
                    <br/>
                    <span>Course, Year, & Section</span>
                    <span class="fw-bold text-decoration-underline">@courseYearSection</span>
                </p>
                 <p class="mb-3">
                    Congatulations!
