@{
    ViewBag.Title = "Registration Form for Regular";
    Layout = "~/Views/Shared/Student_Layout.cshtml";
    
    var currentEmail = "test@email.com";
    var currentFirst = "test";
    var currentMiddle = "test";
    var currentLast = "test";
    var currentId = "test";
    var currentStudentNumber = "1034";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Regular - CvSU Bacoor Campus Enrollment System</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>


    @Styles.Render("~/Content/styleRegForm.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
</head>
<body>

    <div class="container-xl col-10 col-lg-6 py-5">
            <div class="form-group mb-3 py-5 px-4">
                <h2> @ViewBag.Title</h2>
                <div class="mt-2">
                    <small class="text-danger">* Required.</small>
                </div>
            </div>
            
        <!--student number-->
        <div class="form-group mt-1 ps-3 py-4">
            <label for="studentNo"><strong>Student Number</strong></label>
            <div class="col-8 pb-2">
                <input type="text" class=" form-control form-control-lg mt-3" id="studentNo" placeholder="Enter student number" disabled="Yes" value="@currentStudentNumber">
            </div>
        </div>

        <div class="form-group mt-4 ps-3 py-4">
            <label for="exampleInputEmail1"><strong>Email address reciever of your Enrollment Updates</strong></label>
            <div class="col-8">
                <input type="email" class="form-control form-control-lg text mt-3" id="email" aria-describedby="emailHelp" placeholder="Enter an email you want to recieve your enrollment update." value="@currentEmail">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
        </div>

        <!-- Documents -->
        <div class="form-group mt-4 ps-3 py-4">
            <div>
                <strong>Documents</strong>
            </div>

            <label for="goodMoralFile" class="form-label mt-3">Attach a clear photo of your 
                <span class="fw-bold">Certificate of Grades</span>
            </label>
            <div class="col-8 pb-2">
                <input class="form-control" type="file" id="goodMoralFile" accept="image">
            </div>
            
        </div>



        <!--submit-->
        <div class="form-group mt-4 ps-3 py-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="getInfoCheck">
                <label class="form-check-label" for="getInfoCheck">
                    By checking this you are allowing the collection of your data...
                </label>
                <div class="mt-3 w-100 px-3">
                    <button type="submit" class="btn btn-primary w-100 fs-5">Submit</button>
                </div>

            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
            $(function () {
                $('#datepicker').datepicker();
            });
    </script>
</body>
</html>
