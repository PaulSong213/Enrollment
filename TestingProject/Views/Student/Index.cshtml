@model EnrollmentSystem.Models.StudentsModel

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/Registrar_Layout.cshtml";
    var students = ViewBag.Students;
}

@if (TempData["MessageResult"] != null)
{
    <div class="alert alert-primary">
        @TempData["MessageResult"]
    </div>
}

@if (TempData["ErrorResult"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorResult"]
    </div>
}


<section class="row pb-5 w-100 overflow-auto">
    <div class="d-flex justify-content-between py-3">
        <h3>@ViewBag.Title</h3>
    </div>
   <div class="w-100 overflow-auto py-3">
         <table id="dataTable" class="table table-striped" style="width:100%">
    </table>
    </div>
</section>
@section scripts{
 <script>
    $(document).ready(function() {
    
        var studentsData = '@students';
        var coursesData = '@ViewBag.Courses';
        var statusData = '@ViewBag.Status';
    
    
        var students = JSON.parse(studentsData.replace(/&quot;/g,'"'));
        var courses = JSON.parse(coursesData.replace(/&quot;/g,'"'));
        var status = JSON.parse(statusData.replace(/&quot;/g,'"'));
        console.log(status);
        for(var i = 0; i < students.length; i++){
            let student = students[i];
            students[i] = Object.keys(student).map((key) =>{
                if(key === 'CourseId'){
                    for(var j = 0; j < courses.length; j++){
                        if(courses[j]['Id'] == student[key] )return courses[j]['Name'];
                    }
                }
                
                if(key === 'StatusId'){
                    for(var j = 0; j < status.length; j++){
                        if(status[j]['Id'] == student[key] )return status[j]['Name'];
                    }
                }
                
                return student[key];
            });
        }
        var table = $('#dataTable').DataTable( {
            responsive: true,
            data: students,
            columns: [
                { title: "ID" },
                { title: "Email" },
                { title: "First name" },
                { title: "Middle name" },
                { title: "Last name" },
                { title: "Gender" },
                { title: "Age" },
                { title: "Address" },
                { title: "Contact number" },
                { title: "Firebase ID" },
                { title: "Course" },
                { title: "Status" },
                { title: "Profile File Name" },
                { title: "", "defaultContent": "<button class='editItem btn btn-success'>Edit</button>" },
                { title: "", "defaultContent": "<button class='deleteitem btn btn-secondary text-white'>Mark as Inactive</button>" }
            ],
            "fnRowCallback": function(nRow, aData, iDisplayIndex) {
              nRow.setAttribute('id',aData[0]);
              },
            dom: 'Bfrtip',
            buttons: [
                'print','copyHtml5',
            'excelHtml5',
            'pdfHtml5'
            ]
        });
         
        $(".editItem").on('click', function(event){
            let itemId = $(this).closest('tr').attr('id');
            location.href = "/Student/Edit/" + itemId;
        });
        $(".deleteitem").on('click', function(event){
            let itemId = $(this).closest('tr').attr('id');
            location.href = "/Student/Delete/" + itemId;
        });
    } );
    
    
 </script>
}



